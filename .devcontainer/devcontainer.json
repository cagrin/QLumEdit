{
    "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
    "features": {
        "ghcr.io/devcontainers/features/desktop-lite": {
            "password": "vscode",
            "webPort": 6080
        },
        "./qt-install": {
            "installsAfter": ["ghcr.io/devcontainers/features/desktop-lite"]
        }
    },
    "forwardPorts": [6080],
    "customizations": {
        "vscode": {
            "extensions": [
				"ms-vscode.cpptools"
			]
        }
    }
}